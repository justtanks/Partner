<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ts.partner.partnerActivity.PushAreaActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/qiangdan_toptabtex_notselect"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/shenqingdiqu"
            android:textColor="@color/titiletextcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/area_back"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/fanhui" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/area_sheng"
         android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@mipmap/login_beforeedit"
        >
        <ImageView
            android:id="@+id/login_view_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/area_sheng"></ImageView>
        <TextView
            android:id="@+id/area_shengtext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/login_view_phone"
            android:layout_marginStart="13dp"
            android:textSize="12dp"
            android:textColorHint="@color/registhintcolor"
            android:hint="请选择省份"
            />
          <ImageButton
              android:id="@+id/area_shengxiala"
              style="@style/Widget.AppCompat.Button.Borderless"
              android:layout_width="44dp"
              android:layout_height="wrap_content"
              android:src="@mipmap/area_down"
              android:layout_alignParentEnd="true"
              android:layout_centerVertical="true"
              android:clickable="false"
               />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/area_line"
            android:layout_toLeftOf="@id/area_shengxiala"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/area_shi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@mipmap/login_beforeedit"
        >
        <ImageView
            android:id="@+id/login_view_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/area_shi"
            />
        <TextView
            android:id="@+id/area_shitext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/login_view_pass"
            android:layout_marginStart="13dp"
            android:textSize="12dp"
            android:textColorHint="@color/registhintcolor"
            android:hint="请选择城市"

            />
        <ImageButton
            android:id="@+id/area_shixiala"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/area_down"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/area_line"
            android:layout_toLeftOf="@id/area_shixiala"
            />
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/area_qu"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@mipmap/login_beforeedit"
        >
        <ImageView
            android:id="@+id/area_view_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/area_qu"
            />
        <TextView
            android:id="@+id/area_qutext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/area_view_pass"
            android:layout_marginStart="13dp"
            android:textSize="12dp"
             android:textColorHint="@color/registhintcolor"
            android:hint="请选择区县"
            />
        <ImageButton
            android:id="@+id/area_quxiala"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/area_down"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="false"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/area_line"
            android:layout_toLeftOf="@id/area_quxiala"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/area_tijiao"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/selector_tixianbutton"
        android:text="提交申请"
        android:textColor="@color/titiletextcolor"
        />

</LinearLayout>
</layout>