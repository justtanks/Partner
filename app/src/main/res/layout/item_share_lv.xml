<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    <variable
        name="msgbean"
        type="com.ts.partner.partnerBean.netBean.ShareMesBean.MsgBean"></variable>
    </data>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="75dp"
    android:layout_width="wrap_content"
    android:background="@drawable/selector_mainbutton"
    >
    <ImageView
        android:layout_height="55dp"
        android:layout_width="55dp"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        app:image="@{msgbean.spread_pic}"
       />

    <TextView
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:textColor="@color/gray1"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        android:text="@{msgbean.spread_title}"
        />
    <TextView
        android:id="@+id/share_lv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:textColor="@color/gray3"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:text="@{msgbean.spread_time}"
        />
</RelativeLayout>
</layout>